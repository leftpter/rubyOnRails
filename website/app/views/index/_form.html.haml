%form
  #MessageType{:class=>'message_type'}
    %p
      Message type:
      =render 'select', :name=>'message_type', :values=>@description.getMessages.keys, :selected=>message_type
  %hr
  #IndexName{:class=>'index_name'}
    %p
      index name:
      =render 'select', :name=>'index_name', :values=>@description.getMessages[message_type].getIndex.keys, :selected=>index_name

  %hr
  #Necessary{:class=>'necessary'}
    %p Necessary fields
    - descripition.getFields.each do |key, value|
      - if value.isRequired
        =render 'field_input', :key=>key, :value=>value
  %hr
  #Optional{:class=>'optional'}
    %p Optional fields
    - descripition.getFields.each do |key, value|
      - if !value.isRequired
        =render 'field_input', :key=>key, :value=>value
  %hr
  .form-actions
    %button.btn.btn-primary{:type=>'submit', :name=>'search'} Search
  %hr